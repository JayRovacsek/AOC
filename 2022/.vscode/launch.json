    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug executable 'aoc_2022'",
            "cargo": {
                "args": [
                    "build",
                    "--bin=aoc_2022",
                    "--package=aoc_2022"
                ],
                "filter": {
                    "name": "aoc_2022",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in library 'aoc_2022'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--lib",
                    "--package=aoc_2022"
                ],
                "filter": {
                    "name": "aoc_2022",
                    "kind": "lib"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug benchmark 'benchmarks'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--bench=benchmarks",
                    "--package=aoc_2022"
                ],
                "filter": {
                    "name": "benchmarks",
                    "kind": "bench"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        }
    ]
}